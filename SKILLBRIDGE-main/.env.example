# Backend API Configuration
FLASK_ENV=development
FLASK_DEBUG=1

# Firebase Configuration (Get from Firebase Console)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY_ID=your_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_service_account@project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_client_id

# Google Gemini API Configuration (Get from Google AI Studio: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Programmable Search Engine Configuration (Get from: https://programmablesearchengine.google.com/)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DATABASE_URL=firestore

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=100
